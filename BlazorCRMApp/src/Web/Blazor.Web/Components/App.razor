    <script src="_framework/blazor.web.js"></script>
</body>

</html>



@code {
    private string CurrentPageClass = "";

    protected override void OnInitialized()
    {
        UpdateCurrentPageClass(NavigationManager.Uri);
    }

    private void UpdateCurrentPageClass(string uri)
    {
        if (uri.Contains("signup"))
        {
            CurrentPageClass = "hold-transition register-page";
        }
        else if (uri.Contains("login"))
        {
            CurrentPageClass = "hold-transition login-page";
        }
        else
        {
            CurrentPageClass = "hold-transition sidebar-mini";
        }

        // Trigger a re-render
        StateHasChanged();
    }
}